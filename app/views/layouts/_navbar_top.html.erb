										<li><a href="<%= shopping_cart_path %>"><i class="icon-shopping-cart"></i> Shopping Cart</a></li>
									
									<% end %> 
									
									<li><a href="<%= contact_path %>"><i class="icon-envelope-alt"></i> Contact Us</a></li>

