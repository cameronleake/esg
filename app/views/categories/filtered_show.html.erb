<div id="container">	
	<div class="row">

   	<div class="span9">
			<div class="page-header">
				<h2><%= @category.name.pluralize %></h2>
			</div>
			
			<% if @tag_name %>
				<h5>FILTER: <span class="label label-info"><%= @tag_name %><span></h5>
			<% end %>

			<table class="table table-striped">
				<% @filtered_resources.each do |resource| %>
					<thead>
						<tr>
							<td class="blog-article-list">
								<div class="media">
									<h3><%= link_to resource.name, category_resource_path(resource.category_id, resource.id) %></h3>	
									<h5>
										<% if resource.review_count(resource) > 0 %>
										 	 --  <%= pluralize(resource.review_count(resource), 'Review') %>
										<% end %>
									</h5>
									<h5>Type: <%= resource.category.name %> -- <%= display_category_tag_links(resource) %> -- Price:  
										<% if resource.price_type == "Paid" %>
											$<%= resource.price %>
										<% else %>
											FREE
										<% end %>
									</h5>
								</div>					
							</td>
						</tr>
					</thead>
					<tbody>
						<tr><td><%= resource.description %></tr>
					</tbody>
				<% end %>
			</table>
			
			<a href="<%= categories_path %>" class="btn btn-primary">Back to Categories</a>
			
		</div>
			
		<div class="span3" align="center">
			<%= render "resources_sidebar" %>
		</div>
	</div>
</div>
