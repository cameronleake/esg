<div id="container">	
	<div class="row">

   	<div class="span9">
			<div class="page-header">
				<h2>Log In</h2>
			</div>

			<%= form_tag sessions_path, { :method => :post, :class => "simple_form form-horizontal" } do %>

					<div class="control-group">
						<label class="required control-label" for="session_email"><abbr title="required">*</abbr> Email</label>
						<div class="controls">
							<%= text_field_tag :email, params[:email], :class => "string email required", :type => "email", :size => 50 %>				
						</div>
					</div>
	
					<div class="control-group">
						<label class="required control-label" for="session_password"><abbr title="required">*</abbr> Password</label>
						<div class="controls">
							<%= text_field_tag :password, params[:password], :class => "string password required", :type => "password", :size => 50 %>						
						</div>
					</div>

					<div class="control-group">
						<label class="control-label" for="remember_me">Remember Me</label>
						<div class="controls">
							<%= check_box_tag :remember_me, 1, params[:remember_me], :class => "boolean" %>					
						</div>
					</div>
	
				  	<div class="form-actions">
				    	<%= submit_tag :submit, :value => "Log In", :class => 'btn btn-primary' %>
				  	</div>
	
			<% end %>
		</div>
		
		<div class="span3" align="center">
			<%= render "sessions_sidebar" %>
		</div>
	</div>
</div>
		