<div class="page-header">
  	<h2>Contact Us</h2>
</div>

<div id="container">	
	<div class="row">
   	<div class="span12">

			<%= simple_form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>

				<div class="controls">
					<p>Please drop us a line for any suggestions, issues, bugs or just to say hi!</p>
				</div>

				<% if current_user %>
			  		<%= f.input :name, :input_html => { :value => "#{current_user.first_name} #{current_user.last_name}" } %>
			  		<%= f.input :email, :input_html => { :value => current_user.email } %>			
				<% else %>
				  	<%= f.input :name %>
				  	<%= f.input :email %>
				<% end %>
			  	<%= f.input :subject, :input_html => { :class => 'subject-field' } %>
			  	<%= f.input :body, as: :text, :label => "Message", :input_html => { :class => 'message-field' } %>

			  	<div class="form-actions">
			   	<%= f.button :submit, :value => "Submit", :class => 'btn-primary' %>
			  	</div>

			<% end %>

		</div>
	</div>
</div>
