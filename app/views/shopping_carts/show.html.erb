<div id="container">	
	<div class="row">

   	<div class="span9">
			<div class="page-header">
				<h2>Shopping Cart</h2>
			</div>
			
			<table class="table table-striped">
				<% @cart_items.each do |resource| %>
					<thead>
						<tr>
							<td class="blog-article-list">
								<div class="media">
									<h3><%= link_to resource.name, category_resource_path(resource.category_id, resource.id) %></h3>
									<a class="pull-left">
										<dd><%= image_tag resource.image_url(:thumb).to_s %></dd>
									</a>
									<div class="pull-right">
										<a href="<%= remove_from_cart_path(resource.id) %>" class="btn">Remove</a>	
									</div>
									<h5>Type: <%= resource.category.name %> -- <%= display_category_tag_links(resource) %></h5>
									<h5>Price:  
										<% if resource.price_type == "Paid" %>
											<%= "$" + number_with_precision(resource.price_in_cents.to_f/100, :precision => 2) %>
										<% else %>
											FREE
										<% end %>x
									</h5>
									<%= resource.description %>
								</div>					
							</td>
						</tr>
					</thead>
				<% end %>
			</table>
			
		</div>
				
		<div class="span3" align="center">
			<%= render "shopping_cart_sidebar" %>
		</div>
	</div>
</div>
