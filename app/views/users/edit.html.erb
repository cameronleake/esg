<%- model_class = User -%>

	<div class="page-header">
	 	<h2>Profile</h2>
	</div>

	<%= simple_form_for(@user, :html => {:class => 'form-horizontal' }) do |f| %>

	<div class="tabbable">
	  <ul class="nav nav-tabs">
	    <li class="active"><a href="#tab1" data-toggle="tab"><h4>User Details</h4></a></li>
	    <li><a href="#tab2" data-toggle="tab"><h4>Password</h4></a></li>
	    <li><a href="#tab3" data-toggle="tab"><h4>Subscriptions</h4></a></li>
	    <li><a href="#tab4" data-toggle="tab"><h4>Avatar</h4></a></li>
	  </ul>

	  <div class="tab-content">
	    <div class="tab-pane active" id="tab1">
			<%= render "profile_user_details" %>
	    </div>

	    <div class="tab-pane" id="tab2">
			<%= render "profile_password" %>
		</div>

	    <div class="tab-pane" id="tab3">
			<%= render "profile_subscriptions" %>
	    </div>

	    <div class="tab-pane" id="tab4">
			<%= render "profile_avatar" %>
	    </div>
	  </div>
	</div>
	
  	<div class="form-actions">
   	<%= f.submit nil, :value => "Update Profile", :class => 'btn btn-primary' %>
		<% if @user.email_verified == false %>
			<a href=<%= sendmessage_email_verification_path(@user) %> class="btn btn-warning">Send Verification Email</a>
		<% end %>
   	<%= link_to t('.cancel', :default => t("helpers.links.cancel")), root_path, :class => 'btn' %>
  	</div>

	<% end %>