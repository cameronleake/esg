<div class="page-header">
  	<h3>Categories</h3>
</div>

<% tag_cloud Article.where(:published => true).tag_counts.sort { |x, y| x.name <=> y.name }, %w{s m l} do |tag| %>
 	<h4><%= link_to tag.name, article_tag_path(tag.name) %></h4>
<% end %>
<br>

<div class="form-search">
	<div class="input-append">
		<%= form_tag articles_path, method: :get do %>
			<%= text_field_tag :query, params[:query], :class => "search-query search-field" %>
			<%= submit_tag "Search", name: nil, :class => "btn btn-primary" %>
		<% end %>				
	</div>
</form>
<br>


<% unless current_user && current_user.blog_subscription %>
	<div class="page-header">
	  	<h3>Subscribe</h3>
	</div>
	<p>Sign up to receive the latest Blog Posts directly to your inbox!</p>
	<a href="#blog-subscription" role="button" class="btn btn-warning" data-toggle="modal">Subscribe</a>
 
	<!-- Modal -->
	<div id="blog-subscription" class="modal hide fade blog-subscription-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
	   	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	    	<h3 id="myModalLabel">The Engineering Survival Guide</h3>
	  	</div>
 	
		<div class="modal-body">
	   	<p>Subscription to The Engineering Survival Guide Blog is free and will entitle you to receive new articles delivered directly to your inbox!</p></br>
			<p>You can unsubscribe at any time by changing your subscription preferences in your Profile.</p>
	  	</div>
 	
		<div class="modal-footer">
	    	<button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
			<a href=<%= subscribe_blog_path %> class="btn btn-warning">Subscribe Me</a>
	  	</div>
	</div>
	<br>
	<br>
<% end %>