<%- model_class = Article -%>

	<div class="page-header">
	  <h2>Edit Article</h2>
	</div>

	<%= simple_form_for(@article, :html => {:class => 'form-horizontal' }) do |f| %>
		<%= f.file_field :featured_image %>
	
	  	<div class="form-actions">
	    	<%= f.button :submit, :value => "Update", :class => 'btn-primary' %>
	  	</div>

	<% end %>